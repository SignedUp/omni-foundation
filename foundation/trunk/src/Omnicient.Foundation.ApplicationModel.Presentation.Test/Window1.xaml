<Window x:Class="Omnicient.Foundation.ApplicationModel.Presentation.Test.Window1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:p="clr-namespace:Omniscient.Foundation.ApplicationModel.Presentation;assembly=Omniscient.Foundation.ApplicationModel.Presentation"
    Title="Window1" Height="300" Width="300">
    <Window.Resources>

    </Window.Resources>

    <Grid x:Name="LayoutRoot" Background="White">

            <p:DashBoard x:Name="DashBoard1" Margin="10">

                <p:DashBoardPanel Margin="10">
                    <Rectangle Margin="1">
                        <Rectangle.Fill>
                            <SolidColorBrush Color="Pink" />
                        </Rectangle.Fill>
                    </Rectangle>
                </p:DashBoardPanel>

                <p:DashBoardPanel Margin="10">
                    <Rectangle Margin="1">
                        <Rectangle.Fill>
                            <SolidColorBrush Color="Red" />
                        </Rectangle.Fill>
                    </Rectangle>
                </p:DashBoardPanel>

            </p:DashBoard>

            <Button Height="23" HorizontalAlignment="Left" Margin="75,4,0,0" Name="button1" VerticalAlignment="Top" Width="75" Click="button1_Click">Button</Button>
        </Grid>
</Window>
